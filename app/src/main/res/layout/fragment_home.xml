<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/materialbackground3"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/stat"
            android:alpha="0.9"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16dp"
            android:layout_marginEnd="@dimen/margin16dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_power_settings_new_black_24dp"
                android:layout_marginBottom="@dimen/margin32dp"
                android:elevation="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Enabled"
                android:fontFamily="@font/droid_sans_chinese"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/textSizeLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16dp"
                android:text="Performance: High"
                android:fontFamily="@font/droid_sans_chinese"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/textSizeSmall"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="@dimen/buttonSizeSmall"
                android:layout_marginTop="@dimen/margin32dp"
                android:background="@drawable/button_stroke_white2"
                android:text="Configure"
                android:textColor="@color/textColorWhite"
                android:fontFamily="@font/droid_sans_chinese"
                android:textSize="@dimen/textSizeSmall"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginEnd="@dimen/margin16dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:animateLayoutChanges="true">

    </FrameLayout>

</RelativeLayout>